    "serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "heroku-prebuild": "npm config set ignore-scripts true",
    "lint": "eslint ./src --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "npx prettier src --write",
    "_comment_e2e": "E2E tests temporarily disabled",
    "_build:e2e": "vite build --mode test",
    "_e2e": "yarn build:e2e && playwright test",
    "_e2e:headed": "yarn build:e2e && playwright test --headed",
    "_e2e:ui": "yarn build:e2e && playwright test --ui",
    "_e2e:debug": "yarn build:e2e && playwright test --debug",
    "_e2e:report": "playwright show-report",
    "prepare": "husky"
  },
  "resolutions": {
    "@types/react": "^18.0.12"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.tsx": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
